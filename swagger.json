            "name": "authorization",
            "in": "header",
            "required": false,
            "type": "string",
            "description": ""
          },
          {
            "name": "userEmail",
            "in": "path",
            "required": false,
            "type": "string",
            "description": ""
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "headers": {}
          }
        }
      }
    },
