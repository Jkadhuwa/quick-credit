{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", "tab"],
    "comma-dangle": ["warn", "only-multiline"],
    "no-console": "off",
    "no-unused-vars": "off",
    "no-tabs": "off",
    "prefer-arrow-callback": "off"
  }
}
